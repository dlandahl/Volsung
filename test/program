

infrared_noise (1, 1): [
	
	osc: noise~
	filters: [5] filter~

	osc{0} -> filters[0]{0}
	filters{0} --> filters{0}

	filters[-1]{0} -> *100 -> out{0}
]


tone: osc~
noise: infrared_noise~ 5

file: file~ output.raw

noise{0} -> tone{0}
tone{0} -> file{0}

;=========================================

noise~ osc

filter~ a 5
filter~ b 5
filter~ c 5
filter~ d 5
filter~ e 5

mult~ gain 100000
add~ offset 500

osc{0} -> a{0}
a{0} -> b{0}
b{0} -> c{0}
c{0} -> d{0}
d{0} -> e{0}

e{0} -> gain{0}
gain{0} -> offset{0}

osc~ tone
offset{0} -> tone{0}

file~ file output.raw
tone{0} -> file{0}

;=========================================

chord: [4] saw~ 100*n

N: 20
transform(x): 40 * 2^x

carrier_bands: [N] bpf~ transform(n), 4
amps: [N] mult~

chord{0}         x> carrier_bands{0}
carrier_bands{0} => amps{0}


mod_bands: [N] bpf~ transform(n), 4
mod_followers: [N] env~ 20ms, 20ms

mod_bands{0}     => mod_followers{0}
mod_followers{0} => amps{1}

input{0} <> mod_bands{0}
amps{0}  >> output{0}

